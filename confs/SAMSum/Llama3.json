{
    "model_path": {
      "main_model_path": "meta-llama/Meta-Llama-3-8B-Instruct"
    },
    "file_path": {
    "dev_file_path": "./datasets/SAMSum/test_our.jsonl",
    "test_file_path": "./datasets/SAMSum/test_our.jsonl",
    "demon_file_path": ""
  },
  "prompt_template": {
    "main_model_system_template": "<s>{}",
    "assist_model1_system_template": "<s>{}",
    "assist_model2_system_template": "<s>{}",
    "instruction": "Generate a concise summary for the chat below:\n",
    "instruction_parameter": {
      "key": [
        "question"
      ],
      "template": "Chat:{}\nSummary:"
    },
    "demon_parameter": {
      "key": [
        "question",
        "answer"
      ],
      "template": "Chat:{}\nSummary:{}\n"
    }
  },
  "run_parameter": {
    "max_new_tokens": 32
  },
  "result_process_parameter": {
    "early_stop_string_list": [
      "\n"
    ],
    "split_key_before": [
      "\nSummary:"
    ],
    "split_key_behind": [
      "\n",
      "</s>",
      "<unk>"
    ]
  }
}